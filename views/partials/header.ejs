<header id="top-header">
  <span class="siteName">
    <a href="/" title="Return to home page">CSE Motors</a>
  </span>
  <div id="tools">
    <% if (typeof loggedin !== 'undefined' && loggedin) { %>
      <span class="welcome-link">
        <a href="/account/" title="Account Management">Welcome <%= accountData.account_firstname %></a>
      </span> | 
      <a title="Logout" href="/account/logout">Logout</a>
    <% } else { %>
      <a title="Click to log in" href="/account/login">My Account</a>
    <% } %>
  </div>
</header>