<%- include('../partials/head', {title: title}) %>

<body>
    <div id="wrapper">
        <%- include('../partials/header') %>
        <%- include('../partials/navigation') %>

        <main>
            <div class="management-container">
                <h1><%= title %></h1>
                
                <%# Flash Messages %>
                <%- messages() %>

                <div class="welcome-message">
                    <% if (typeof accountData !== 'undefined' && accountData) { %>
                        <h2>Welcome <%= accountData.account_firstname %>!</h2>
                        
                        <div class="account-info">
                            <h3>Account Information:</h3>
                            <ul>
                                <li><strong>Name:</strong> <%= accountData.account_firstname %> <%= accountData.account_lastname %></li>
                                <li><strong>Email:</strong> <%= accountData.account_email %></li>
                                <li><strong>Account Type:</strong> <%= accountData.account_type %></li>
                            </ul>
                            
                            <div class="account-actions">
                                <a href="/account/update/<%= accountData.account_id %>" class="btn-update">Update Account Information</a>
                            </div>
                        </div>

                        <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
                            <div class="management-section">
                                <h3>Inventory Management</h3>
                                <p><a href="/inv/" class="btn-management">Access Inventory Management</a></p>
                            </div>
                        <% } %>
                    <% } else { %>
                        <p>You're logged in!</p>
                    <% } %>
                </div>

                <div class="management-actions">
                    <a href="/account/logout" class="btn-logout">Logout</a>
                </div>
            </div>
        </main>

        <%- include('../partials/footer') %>
    </div>
</body>
</html>